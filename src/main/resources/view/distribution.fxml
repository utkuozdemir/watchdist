<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
            minWidth="-Infinity" prefHeight="700.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/null"
            fx:controller="org.utkuozdemir.watchdist.controller.DistributionController">
    <Label layoutX="13.0" layoutY="70.0" text="%distribution.distribution.table" AnchorPane.leftAnchor="13.0">
        <font>
            <Font name="System Bold" size="14.0"/>
        </font>
    </Label>
    <TableView fx:id="distributionTable" editable="true" layoutX="14.0" layoutY="64.0" prefHeight="443.0"
               prefWidth="592.0" AnchorPane.bottomAnchor="180.0" AnchorPane.leftAnchor="14.0"
               AnchorPane.rightAnchor="224.0" AnchorPane.topAnchor="92.0">
        <columns>
            <TableColumn fx:id="hoursColumn" prefWidth="80.0" resizable="false" text="%hours.between"/>
        </columns>
    </TableView>
    <Label layoutX="13.0" layoutY="14.0" text="%distribution.watch.date" AnchorPane.leftAnchor="13.0"
           AnchorPane.topAnchor="14.0">
        <font>
            <Font name="System Bold" size="14.0"/>
        </font>
    </Label>
    <Button fx:id="distribute" layoutX="616.0" layoutY="92.0" mnemonicParsing="false" onAction="#distribute"
            prefHeight="30.0" prefWidth="200.0" text="%distribution.distribute" AnchorPane.rightAnchor="14.0"
            AnchorPane.topAnchor="92.0">
        <font>
            <Font name="System Bold" size="12.0"/>
        </font>
    </Button>
    <Button fx:id="exportToExcel" layoutX="616.0" layoutY="136.0" mnemonicParsing="false" onAction="#exportToExcel"
            prefHeight="30.0" prefWidth="200.0" text="%distribution.export.as.excel.file" AnchorPane.rightAnchor="14.0"
            AnchorPane.topAnchor="136.0">
        <font>
            <Font name="System Bold" size="12.0"/>
        </font>
    </Button>
    <Button fx:id="approve" defaultButton="true" layoutX="616.0" layoutY="406.0" mnemonicParsing="false"
            onAction="#approveDistribution" prefHeight="58.0" prefWidth="200.0" text="%APPROVE"
            AnchorPane.bottomAnchor="180.0" AnchorPane.rightAnchor="14.0">
        <font>
            <Font name="System Bold" size="24.0"/>
        </font>
    </Button>
    <ComboBox fx:id="day" layoutX="116.0" layoutY="37.0" prefHeight="23.0" prefWidth="60.0"
              AnchorPane.leftAnchor="116.0" AnchorPane.topAnchor="37.0"/>
    <ComboBox fx:id="year" layoutX="266.0" layoutY="37.0" prefHeight="23.0" prefWidth="85.0"
              AnchorPane.topAnchor="37.0"/>
    <ComboBox fx:id="month" layoutX="176.0" layoutY="37.0" prefHeight="23.0" prefWidth="90.0"
              AnchorPane.leftAnchor="176.0" AnchorPane.topAnchor="37.0"/>
    <Label fx:id="dayName" layoutX="358.0" layoutY="41.0" text="-" AnchorPane.leftAnchor="358.0"
           AnchorPane.topAnchor="41.0">
        <font>
            <Font name="System Bold" size="12.0"/>
        </font>
    </Label>
    <Button fx:id="today" layoutX="534.0" layoutY="33.0" mnemonicParsing="false" onAction="#goToToday" prefHeight="30.0"
            prefWidth="72.0" text="%today" AnchorPane.leftAnchor="534.0" AnchorPane.topAnchor="33.0">
        <font>
            <Font name="System Bold" size="12.0"/>
        </font>
    </Button>
    <Label alignment="TOP_LEFT" layoutX="686.0" layoutY="210.0" prefHeight="78.0" prefWidth="200.0"
           text="%distribution.click.soldier.to.change" textAlignment="CENTER" wrapText="true"
           AnchorPane.rightAnchor="14.0" AnchorPane.topAnchor="210.0">
        <font>
            <Font size="12.0"/>
        </font>
    </Label>
    <Button fx:id="previousDay" layoutX="14.0" layoutY="33.0" mnemonicParsing="false" onAction="#jumpToPreviousDay"
            prefHeight="30.0" prefWidth="95.0" text="%distribution.previous.day" AnchorPane.leftAnchor="14.0"
            AnchorPane.topAnchor="33.0">
        <font>
            <Font name="System Bold" size="12.0"/>
        </font>
    </Button>
    <Button fx:id="nextDay" layoutX="431.0" layoutY="33.0" mnemonicParsing="false" onAction="#jumpToNextDay"
            prefHeight="30.0" prefWidth="95.0" text="%distribution.next.day" AnchorPane.leftAnchor="431.0"
            AnchorPane.topAnchor="33.0">
        <font>
            <Font name="System Bold" size="12.0"/>
        </font>
    </Button>
    <ProgressIndicator fx:id="progressIndicator" layoutX="690.0" layoutY="276.0" visible="false"
                       AnchorPane.rightAnchor="88.0" AnchorPane.topAnchor="276.0"/>
    <Label layoutX="14.0" layoutY="527.0" text="%notes.for.day" AnchorPane.bottomAnchor="158.0"
           AnchorPane.leftAnchor="14.0">
        <font>
            <Font name="System Bold" size="12.0"/>
        </font>
    </Label>
    <Button fx:id="addOrEditNotes" layoutX="686.0" layoutY="642.0" mnemonicParsing="false" onAction="#addOrEditNotes"
            prefHeight="30.0" prefWidth="200.0" text="%add.edit.notes" AnchorPane.bottomAnchor="14.0"
            AnchorPane.rightAnchor="14.0">
        <font>
            <Font name="System Bold" size="12.0"/>
        </font>
    </Button>
    <ScrollPane layoutX="16.0" layoutY="596.0" prefHeight="142.0" prefWidth="662.0" AnchorPane.bottomAnchor="14.0"
                AnchorPane.leftAnchor="14.0">
        <content>
            <Label fx:id="notes" text="-" wrapText="true">
                <font>
                    <Font name="System Bold Italic" size="13.0"/>
                </font>
            </Label>
        </content>
    </ScrollPane>
    <Label alignment="TOP_LEFT" layoutX="686.0" layoutY="544.0" prefHeight="97.0" prefWidth="200.0" text="%notes.info"
           wrapText="true" AnchorPane.bottomAnchor="60.0" AnchorPane.rightAnchor="14.0"/>
    <CheckBox fx:id="showColors" layoutX="686.0" layoutY="178.0" mnemonicParsing="false" prefHeight="16.0"
              prefWidth="200.0" selected="true" text="%show.colorful" AnchorPane.rightAnchor="14.0"
              AnchorPane.topAnchor="178.0">
        <font>
            <Font name="System Bold" size="12.0"/>
        </font>
    </CheckBox>
</AnchorPane>
