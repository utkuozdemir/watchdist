<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" maxHeight="-Infinity" maxWidth="-Infinity"
            minHeight="-Infinity"
            minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0"
            xmlns="http://javafx.com/javafx/null"
            fx:controller="org.utkuozdemir.watchdist.controller.NotesController">
    <children>
        <Label fx:id="title" layoutX="14.0" layoutY="14.0" text="-" AnchorPane.leftAnchor="14.0"
               AnchorPane.topAnchor="14.0">
            <font>
                <Font name="System Bold" size="12.0"/>
            </font>
        </Label>
        <TextArea fx:id="notes" layoutX="14.0" layoutY="33.0" prefHeight="312.0" prefWidth="572.0"
                  promptText="%no.notes" AnchorPane.bottomAnchor="55.0" AnchorPane.leftAnchor="14.0"
                  AnchorPane.rightAnchor="14.0" AnchorPane.topAnchor="33.0"/>
        <Button defaultButton="true" layoutX="447.0" layoutY="333.0" mnemonicParsing="false"
                onAction="#saveNote"
                prefHeight="30.0" prefWidth="139.0" text="%save.note" AnchorPane.bottomAnchor="14.0"
                AnchorPane.rightAnchor="14.0">
            <font>
                <Font name="System Bold" size="12.0"/>
            </font>
        </Button>
        <Button layoutX="329.0" layoutY="356.0" mnemonicParsing="false" onAction="#deleteNote"
                prefHeight="30.0"
                prefWidth="110.0" style="-fx-base: #F78181;" text="%delete.note">
            <font>
                <Font name="System Bold" size="12.0"/>
            </font>
        </Button>
    </children>
</AnchorPane>
