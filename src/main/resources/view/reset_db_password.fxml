<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" maxHeight="-Infinity" maxWidth="-Infinity"
            minHeight="-Infinity"
            minWidth="-Infinity" prefHeight="130.0" prefWidth="228.0"
            xmlns="http://javafx.com/javafx/null"
            fx:controller="org.utkuozdemir.watchdist.controller.ResetDbPasswordController">
    <Label layoutX="14.0" layoutY="14.0" text="%db.reset.password" AnchorPane.leftAnchor="14.0"
           AnchorPane.rightAnchor="14.0" AnchorPane.topAnchor="14.0">
        <font>
            <Font name="System Bold" size="12.0"/>
        </font>
    </Label>
    <PasswordField fx:id="password" layoutX="14.0" layoutY="29.0" prefHeight="23.0"
                   prefWidth="200.0"
                   AnchorPane.leftAnchor="14.0" AnchorPane.rightAnchor="14.0"/>
    <Button defaultButton="true" layoutX="14.0" layoutY="61.0" mnemonicParsing="false"
            onAction="#resetDatabase"
            prefHeight="30.0" prefWidth="200.0" style="-fx-base: #F78181;" text="%reset.database"
            AnchorPane.leftAnchor="14.0" AnchorPane.rightAnchor="14.0">
        <font>
            <Font name="System Bold" size="12.0"/>
        </font>
    </Button>
    <Label fx:id="error" layoutX="14.0" layoutY="102.0" prefHeight="15.0" prefWidth="200.0"
           text="%invalid.password"
           textFill="RED" visible="false" AnchorPane.bottomAnchor="14.0"
           AnchorPane.leftAnchor="14.0"
           AnchorPane.rightAnchor="14.0">
        <font>
            <Font name="System Bold" size="12.0"/>
        </font>
    </Label>
</AnchorPane>
