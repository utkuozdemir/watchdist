<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
            minWidth="-Infinity"
            prefHeight="218.0" prefWidth="250.0" xmlns="http://javafx.com/javafx/null">
    <TextField fx:id="fullName" layoutX="14.0" layoutY="43.0" prefHeight="23.0" prefWidth="216.0"
               promptText="%full.name" AnchorPane.leftAnchor="14.0" AnchorPane.rightAnchor="14.0"
               AnchorPane.topAnchor="43.0"/>
    <TextField fx:id="duty" layoutX="14.0" layoutY="81.0" prefHeight="23.0" prefWidth="216.0" promptText="%duty"
               AnchorPane.leftAnchor="14.0" AnchorPane.rightAnchor="14.0" AnchorPane.topAnchor="81.0"/>
