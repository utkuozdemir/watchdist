           textFill="RED" visible="false">
        <font>
            <Font name="System Bold" size="11.0"/>
        </font>
    </Label>
    <Button fx:id="saveWatchPointButton" layoutX="149.0" layoutY="150.0" mnemonicParsing="false"
            onAction="#saveWatchPoint" prefHeight="30.0" prefWidth="140.0" text="%addnewwatchpoint.save.watch.point"/>
