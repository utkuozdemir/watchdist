            minWidth="-Infinity" prefHeight="194.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/null">
    <Label layoutX="14.0" layoutY="14.0" text="%addnewwatchpoint.new.watch.point"/>
    <TextField fx:id="watchPointName" layoutX="14.0" layoutY="43.0" prefHeight="23.0" prefWidth="270.0"
               promptText="%addnewwatchpoint.watch.point.name"/>
    <ComboBox fx:id="requiredSoldierCount" layoutX="194.0" layoutY="80.0" prefHeight="23.0" prefWidth="90.0"
              promptText="%required.soldier.count">
        <items>
            <FXCollections fx:factory="observableArrayList">
                <Integer fx:value="1"/>
